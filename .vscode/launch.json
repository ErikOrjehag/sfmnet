    "version": "0.2.0",
    "configurations": [

        {
            "name": "Inspect",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/debug.py",
            "console": "integratedTerminal",
            "subProcess": true,
            "args": [
                "--load",
                "checkpoints/model2_epoch_11.pt"
            ]
        },
        {
            "name": "Train",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "subProcess": true,
            "args": [
                "train",
                "--workers",
                "1",
                "--net",
                "sfmlearner",
                //"monodepth2",
                //"--ssim-weight",
                //"0.15",
                //"--smooth-map-normalization",
                //"--edge-aware",
                //"--upscale",
                //"--stationary-mask",
                //"--min-loss"
            ]
        },
        {
            "name": "Gen",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/datasets/kitti/gen_excluded.py",
            "console": "integratedTerminal",
            "subProcess": true,
            "args": [
                "~/Code/Data/kitti_raw"
            ]
        },
        {
            "name": "Unsuperpoint",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "subProcess": true,
            "args": [
                "point-train",
                "--workers",
                "1",
            ]
        },
        {
            "name": "Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "subProcess": true,
        },
        {
            "name": "SFM Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "subProcess": true,
            "args": [
                "sfm-debug",
                "--workers",
                "1",
                "--dataset",
                "kitti",
                "--net",
                "monodepth2",
                "--load",
                "checkpoints/mono/epoch_5.pt"
            ]
        },
        {
            "name": "Train fundamental",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "subProcess": true,
            "args": [
                "fcons-train",
                "--workers",
                "1",
                "--load-point",
                "checkpoints/pointuni2/epoch_30.pt",
            ]
        },
        {
            "name": "Train point",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "subProcess": true,
            "args": [
                "point-train",
                "--workers",
                "1",
                "--load",
                "checkpoints/pointuni2/epoch_30.pt",
                "--device",
                "cpu"
            ]
        },
        {
            "name": "homo-debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "subProcess": true,
            "args": [
                "homo-debug",
                "--workers",
                "1",
                "--load",
                "checkpoints/homo_all_s_3/epoch_1.pt",
                "--dataset",
                "kitti_homo_adapt"
            ]
        },
    ]
}